{
  "root": true,
  "plugins": ["@typescript-eslint", "react"],
  "extends": ["plugin:@typescript-eslint/recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "project": ["./tsconfig.json"]
  },
  "settings": {
    "react": {
      "version": "18.0"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
